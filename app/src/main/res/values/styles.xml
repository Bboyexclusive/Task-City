<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FA07DA</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#EC05CC</item>
    </style>

    <style name="AppTheme.NoActionBar"  parent="Theme.Design.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#F607E7</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">@color/colorPrimaryDark</item>

    </style>
    <style name="play">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:letterSpacing">
            0.04
        </item>

        <item name="android:textColor">#7D709C</item>

    </style>
</resources>
