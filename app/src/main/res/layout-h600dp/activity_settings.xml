<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:layout_gravity="center"
    android:background="#51459E">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="25dp"
        android:layout_marginRight="13dp"
        android:layout_toStartOf="@+id/imageView11"
        android:background="@drawable/backbutton2"
        android:padding="14dp"
        app:srcCompat="@drawable/share" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8337023763045237/5587007360">
    </com.google.android.gms.ads.AdView>


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/backbutton2"
        android:padding="16dp"
        app:srcCompat="@drawable/crossback" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/coinbakground"
            android:padding="22dp"
            app:srcCompat="@drawable/settingsicon" />

        <Button
            android:id="@+id/instructionsbtn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/instructionicon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/font"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="INSTRUCTIONS"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reedembtn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@id/instructionsbtn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/redeemicon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/font"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="REEDEM"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/aboutusbtn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@+id/reedembtn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/abouticon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/font"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="ABOUT US"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/contactbtn"
            android:layout_width="310dp"
            android:layout_height="80dp"
            android:layout_below="@+id/aboutusbtn"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/contacticon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/font"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="CONTACT"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
